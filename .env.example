# Podcaster App Configuration

# ===================
# API Configuration
# ===================

# # Desarrollo - usa proxy de Vite
VITE_API_BASE_URL=""
VITE_ITUNES_RSS_URL="/rss"
VITE_ITUNES_LOOKUP_URL="/lookup"

# # Producción - URLs directas de iTunes
# VITE_API_BASE_URL="https://itunes.apple.com"
# VITE_ITUNES_RSS_URL="/us/rss"
# VITE_ITUNES_LOOKUP_URL="/lookup"


# ===================
# Cache Configuration
# ===================

# Tiempo de vida del cache (24 horas por defecto)
VITE_CACHE_TTL_HOURS=24
VITE_CACHE_TTL_MS=86400000

# ===================
# API Limits
# ===================

# Número máximo de podcasts a obtener
VITE_PODCAST_LIMIT=100

# Número máximo de episodios por podcast
VITE_EPISODE_LIMIT=20

# ===================
# Debug & Logging
# ===================

# Activar modo debug (automático en desarrollo)
# VITE_DEBUG_MODE=false

# Nivel de logging: error | warn | info | debug
VITE_LOG_LEVEL=error

# ===================
# Features
# ===================

# Habilitar analytics (futuro)
VITE_ENABLE_ANALYTICS=false

# Habilitar modo offline
VITE_ENABLE_OFFLINE_MODE=true
